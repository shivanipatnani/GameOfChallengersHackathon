<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GameOfChallengers.Views.Monsters.EditMonsterPage"
             Title="{Binding Title}">
    <ContentPage.ToolbarItems>
        
        <ToolbarItem Text="Cancel" Clicked="Cancel_Clicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Edit Monster" FontSize="Small" HorizontalOptions="CenterAndExpand" />
            <Label Text="Name" FontSize="Small" FontAttributes="Bold" />
            <Entry Text="{Binding Data.Name}" FontSize="Small" />

            <Button Text="Save"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Clicked="Save_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>