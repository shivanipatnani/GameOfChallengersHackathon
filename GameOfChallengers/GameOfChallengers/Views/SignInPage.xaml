<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="GameOfChallengers.Views.SignInPage">
    <ContentPage.Content>
        <ScrollView>
        <StackLayout Orientation="Vertical" Padding="16,40,16,40" Spacing="10">
               
            <Image Source="WarOfAges.jpeg" VerticalOptions="Center" HeightRequest="150" HorizontalOptions="Fill"></Image>
            <Entry x:Name="name" Text="Enter Your Name" FontSize="Medium" />
            <Label BindingContext="{x:Reference name}" FontAttributes="Bold" FontSize="Large" HorizontalOptions="Center" VerticalOptions="CenterAndExpand"></Label>
                <Button Text="Start"
                        FontAttributes="Bold" Clicked="StartGame_Command" HorizontalOptions="Center" TextColor="Black" BackgroundColor="DarkTurquoise"
                    HeightRequest="50"
                         WidthRequest="100"></Button>
        </StackLayout>
            </ScrollView>
	</ContentPage.Content>
</ContentPage>
